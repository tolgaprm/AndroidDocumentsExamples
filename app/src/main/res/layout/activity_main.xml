<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/first_edit_text" />

    <EditText
        android:id="@+id/editTextSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:hint="@string/second_edit_text" />

    <!-- Sadece Türkçe dilinde görünecek olan üçüncü alan -->
    <EditText
        android:id="@+id/editTextThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/third_edit_text"
        android:visibility="gone" />

</LinearLayout>
